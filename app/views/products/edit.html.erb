<h1>Products#edit</h1>
<div>
	<%= form_for @product ,{:action =>"update"} do |f| %>
	<label>Brand</label>
	<%= f.select :brand_id ,options_for_select(Brand.all.map {|i| [i.name ,i.id]}) %><br>
	<label>Name</label>
	<%= f.text_field :name %><br>
	<%= f.submit "submit" %>
	<%end%>
</div>
